# PPT Agent 环境变量配置示例
# 复制此文件为 .env 并填入实际值

# ===========================================
# 应用基础配置
# ===========================================
APP_NAME=PPT Agent
APP_VERSION=1.0.0
DEBUG=true
APP_ENV=development

# ===========================================
# 服务器配置
# ===========================================
HOST=0.0.0.0
PORT=8000

# ===========================================
# 数据库配置
# ===========================================
DATABASE_URL=postgresql+asyncpg://ppt_user:ppt_password@localhost/ppt_agent

# ===========================================
# Redis 配置
# ===========================================
REDIS_URL=redis://localhost:6379/0

# ===========================================
# JWT 配置
# ===========================================
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ===========================================
# OpenAI 配置
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview

# ===========================================
# SerpAPI 配置 (图片和网页搜索)
# ===========================================
SERPAPI_KEY=your-serpapi-key-here

# ===========================================
# CORS 配置
# ===========================================
CORS_ORIGINS=["http://localhost:8090","http://localhost:15173","https://localhost:8090","https://localhost:5173"]

# ===========================================
# 文件上传配置
# ===========================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# ===========================================
# MinIO 配置 (对象存储)
# ===========================================
MINIO_ENDPOINT=localhost:19000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_SECURE=false
MINIO_BUCKET=ppt-agent

# ===========================================
# Celery 配置
# ===========================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# 监控配置
# ===========================================
SENTRY_DSN=
ENABLE_METRICS=true

# ===========================================
# 前端配置 (生产环境)
# ===========================================
VITE_API_BASE_URL=http://localhost:18000
VITE_WS_BASE_URL=ws://localhost:18000
